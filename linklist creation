#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */


// vineet k verma  
// code for creating the link list and traversal of linklist 
 

struct node{
	int data ; 
	struct node *  link ;
	
} ; 

int main(int argc, char *argv[]) {
int  n , val   ; 
struct node *p  , *q ; 

printf("Enter the number of nodes:") ; 
scanf("%d" , &n) ;


printf("Enter the head node value  : "); 
scanf("%d" , &val) ;
 
 q  = (struct node * )malloc(sizeof(struct node)); 
 
q->data=  val  ;
q->link = NULL ;

struct  node  * start  ;
start = q; 
 
p = start ;

int  i  ;

for(i = 1 ; i <  n  ; i++)
{
	printf("Enter the node%d value  : ",  i ); 
	scanf("%d" , &val) ;
 
 	q  = (struct node * )malloc(sizeof(struct node)); // comment 1   create kiya new node 
 
     q->data=  val  ;
     q->link = NULL ;

p-> link  = q ; // yaha par first node ko link kiya new node jo abhi bani  comment 1  mai 
p = p->link ;// yaha p karlega store nayi node ka address store   

}

 
		
p = start  ;

while(p!= NULL)
{
	printf("%d->" , p->data) ;
	p = p->link ; 
	
}



	
	
	return 0;
}
