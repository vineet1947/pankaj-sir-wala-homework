// vineet k verma  
// code for creating the link list and traversal of linklist 
 

struct node{
	int data ; 
	struct node *  link ;
	
} ; 


 struct node* insert_node_at_beg(int num  , struct node * head ){
 	
	struct node  * temp =  (struct node  * )malloc(sizeof(struct node )); 
	temp->data = num ;
	temp->link = NULL  ; 
	
	
	temp->link = head  ; 
head = temp ; 
	
	
	
}
struct node  * end_insert(int val , struct node * head)
{
		struct node  * temp =  (struct node  * )malloc(sizeof(struct node )); 
	temp->data = val ;
	temp->link = NULL  ; 
	
	if(head == NULL)
	{
		head = temp ;
		return head ; 
		
	}
struct node * ptr ; 
ptr=  head  ;

while(ptr->link != NULL)
{
	ptr = ptr->link ;
	
	}	
	ptr->link = temp ;
	
	return head; 
	
	
}


int main(int argc, char *argv[]) {
