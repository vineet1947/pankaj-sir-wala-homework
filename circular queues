#include <stdio.h>
#include <stdlib.h>


#define max 5



//vineet k verma 
//circular queue  




int arr_queue[max] ;

int front  = -1  , rear = -1 ;
 

void insert(int val ) ;
void dequeue() ;
void  show() ;


int main(int argc, char *argv[]) {
	
int  choice ;

while(1)
{
	
	printf("\noption 1. Insert !!\n ") ;
	printf("option 2 .Delete!!\n") ;
	printf("option 3. Peek!! \n") ;
	printf("option 4. Exit!!\n"); 
	
	printf("Enter  choice : \n") ;
 	scanf("%d" , &choice) ;

	
	

switch(choice){
	
int val ;
	
	case 1 :
		printf("Enter the number  :  ") ;
		scanf("%d" , &val) ;
		
		insert(val) ;
		break ;
		
	case 2 :
		
		dequeue() ;
		break ;
		
		
	case 3: 
     	show() ;
		break  ;
		
	case 4: 
	exit(1) ;
	break  ;
	
	
	default  :
		printf("Invalid number!!") ;
	
		
}

	
	
	
}
	
	return 0;
}




void insert(int val )
{ 


	if ((front == 0 && rear == max - 1 ) || (rear + 1  == front) ) 
	{
	
	printf("OverFlow!! \n") ;
	return ;
}


if(front == -1 )
{
	front = 0  ;
	rear =  0 ;
}


else {
	if(rear == max -1)
	rear = 0 ; 
	else {
		rear++ ;	
	}

}

arr_queue[rear] = val ;


}


void  dequeue()
{
	
	int temp ;
	
	if(front == -1)
	{
		printf("Underflow!!\n") ; // if  0 elements  
		return ;
		
	}
	
//	printf("The element deleted :  %d \n" , arr_queue[front]) ; // printing tho hogi front part ke 
	
	else {
		printf("The element deleted :  %d \n" , arr_queue[front]) ; // printing tho hogi front part ke 
	
	
		if(front == rear ) // only for one element 
		 {
		 
		front  =-1  ;
		 rear = -1 ;
		 	  
		 }
else
{
	if(front == max -1) // front  is pointing to the last element 
	front = 0  ;
	else
	front++ ;
	
}



	}

	

}

void show()
{
	int f_pos = front ; 
	int  r_pos  = rear ;
	if (f_pos == -1)
	return ; 
	
	
	printf("Queue : \n") ;
	
	if(f_pos <=  r_pos)
	{
		while(f_pos <= r_pos)
		{
			printf("%d " , arr_queue[f_pos]) ;
			
			f_pos++ ;
			
		}
		
		
	}
	else
	{
		while(f_pos <= max -1)
		{
			printf("%d " , arr_queue[f_pos]) ;
			
			f_pos++ ;
			
			
		}
		f_pos =  0  ;
		while(f_pos <= r_pos)
		{
			printf("%d " , arr_queue[f_pos]) ;
			
			f_pos++ ;
		}
	}
	



}


